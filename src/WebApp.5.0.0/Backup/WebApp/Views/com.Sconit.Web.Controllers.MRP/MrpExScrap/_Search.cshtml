@using com.Sconit.Web.Models.SearchModels.MRP
<fieldset>
    @using (Html.BeginForm("List", "MrpExScrap"))
    {   
        <div class="search">
            <div class="editor-label-2">
                <label>
                   Id
                </label>
            </div>
            <div class="editor-field-2">
                @Html.TextBox("Id", null)
            </div>
            <div class="search-label">
                <label for="MrpExScrap_Flow">
                    @Resources.EXT.PageLan.ProductionLine
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Flow", TempData["MrpExScrapSearchModel"] != null ? ((MrpExScrapSearchModel)TempData["MrpExScrapSearchModel"]).Flow : string.Empty)
            </div>
            <div class="search-label">
                <label for="MrpExScrap_DateFrom">
                    @Resources.EXT.PageLan.DateFrom
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Name("DateFrom")
        .Value(TempData["MrpExScrapSearchModel"] != null ? ((MrpExScrapSearchModel)TempData["MrpExScrapSearchModel"]).DateFrom : System.DateTime.Today.AddDays(-1))
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="MrpExScrap_DateTo">
                    @Resources.EXT.PageLan.To
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Name("DateTo")
            .Value(TempData["MrpExScrapSearchModel"] != null ? ((MrpExScrapSearchModel)TempData["MrpExScrapSearchModel"]).DateTo : System.DateTime.Today)
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            @Html.Button(Resources.SYS.Global.Button_Search, "Url_MrpExScrap_View", new Dictionary<string, string>()
	{
	    {"type", "submit"},
	    {"id", "btnSearch"}
	})
            @Html.Button(Resources.SYS.Global.Button_New, "Url_MrpExScrap_Edit", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnNew"},
        {"onclick","location.href='"+@Url.Content("~/MrpExScrap/New")+"'"}
	})
        </div>
    }
</fieldset>
