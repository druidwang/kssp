@model IEnumerable<com.Sconit.Entity.MRP.TRANS.MrpLog>
<fieldset>
    @(Html.Telerik().Grid(Model)
        .Name("MrpSnapLogGrid")

        .Columns(columns =>
        {
            columns.Bound(o => o.ErrorLevel);
            columns.Bound(o => o.Logger);
            columns.Bound(o => o.PlanVersion);
            columns.Bound(o => o.Message);
        })

        .Scrollable(c => c.Enabled(false))
        .EnableCustomBinding(true)

        .Resizable(resizing => resizing.Columns(true))
    )
   
</fieldset>
<style>
    .t-grid td {
        line-height: 18px;
    }
</style>