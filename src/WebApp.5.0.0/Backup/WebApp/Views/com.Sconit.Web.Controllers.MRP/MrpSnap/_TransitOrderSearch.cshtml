@using com.Sconit.Entity.MRP.MD
@using com.Sconit.Web.Models.SearchModels.MRP
<fieldset>
    @using (Html.BeginForm("TransitOrderList", "MrpSnap"))
    {   
        <div class="search">

             <div class="search-label">
                <label>
                   @Resources.MRP.TransitOrder.TransitOrder_SnapTime
                </label>
            </div>
             <div class="search-field">
                 @{
           Html.RenderAction("_MrpSnapMasterComboBox", "Common", new
               {
                   controlName = "SnapTime",
                   SnapType = com.Sconit.CodeMaster.SnapType.Mrp,
                   selectedValue = TempData["TransitOrderSearchModel"] != null ? ((TransitOrderSearchModel)TempData["TransitOrderSearchModel"]).SnapTime : DateTime.MinValue

               });
                }
            </div>
               <div class="search-label">
                <label>
                    @Resources.MRP.TransitOrder.TransitOrder_Location
                </label>
            </div>
            <div class="search-field" >
                @{
               Html.RenderAction("_LocationComboBox", "Common", new
               {
                   controlName = "Location",
                   selectedValue = TempData["TransitOrderSearchModel"] != null ? ((TransitOrderSearchModel)TempData["TransitOrderSearchModel"]).Location : string.Empty

               });
                }
            </div>
              <div class="search-label">
                <label>
                    @Resources.MRP.TransitOrder.TransitOrder_OrderNo
                </label>
            </div>
             <div class="search-field">
              @Html.TextBox("OrderNo", TempData["TransitOrderSearchModel"] != null ? ((TransitOrderSearchModel)TempData["TransitOrderSearchModel"]).OrderNo : string.Empty)
            </div>


             <div class="search-label">
                <label>
                     @Resources.MRP.TransitOrder.TransitOrder_IpNo
                </label>
            </div>
             <div class="search-field">
                 @Html.TextBox("IpNo", TempData["TransitOrderSearchModel"] != null ? ((TransitOrderSearchModel)TempData["TransitOrderSearchModel"]).IpNo : string.Empty)
               
            </div>

             <div class="search-label">
                <label>
                     @Resources.MRP.TransitOrder.TransitOrder_Flow
                </label>
            </div>
             <div class="search-field">
                   @{
        Html.RenderAction("_FlowComboBox", "Common",
            new
            {
                controlName = "Flow",
                selectedValue = TempData["TransitOrderSearchModel"] != null ? ((TransitOrderSearchModel)TempData["TransitOrderSearchModel"]).Flow : string.Empty
            });
                }
            </div>

            <div class="search-label">
                <label>
                      @Resources.MRP.TransitOrder.TransitOrder_Item
                </label>
            </div>
             <div class="search-field">
                @{
               Html.RenderAction("_ItemComboBox", "Common",
                   new
                   {
                       controlName = "Item",
                       selectedValue = TempData["TransitOrderSearchModel"] != null ? ((TransitOrderSearchModel)TempData["TransitOrderSearchModel"]).Item : string.Empty
                   }); 
                }
            </div>
           
               
         
        </div>
        <div class="search-footer">
         @Html.Hidden("isFromList", true)
           <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
        </div>

    }
</fieldset>

