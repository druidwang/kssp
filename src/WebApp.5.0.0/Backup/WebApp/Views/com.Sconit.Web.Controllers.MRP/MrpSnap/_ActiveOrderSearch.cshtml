@using com.Sconit.Entity.MRP.MD
@using com.Sconit.Web.Models.SearchModels.MRP
<fieldset>
    @using (Html.BeginForm("ActiveOrderList", "MrpSnap"))
    {   
        <div class="search">
            <div class="search-label">
                <label>
                    @Resources.MRP.ActiveOrder.ActiveOrder_SnapTime
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_MrpSnapMasterComboBox", "Common", new
            {
                controlName = "SnapTime",
                SnapType = com.Sconit.CodeMaster.SnapType.Mrp,
                selectedValue = TempData["ActiveOrderSearchModel"] != null ? ((ActiveOrderSearchModel)TempData["ActiveOrderSearchModel"]).SnapTime : DateTime.MinValue
            });
                }
            </div>
            <div class="search-label">
                <label>
                @Resources.MRP.ActiveOrder.ActiveOrder_IsIndepentDemand</label>
            </div>
            <div class="search-field">
                @Html.CheckBox("IsIndepentDemand")
            </div>

            <div class="search-label">
                <label>
                    @Resources.MRP.ActiveOrder.ActiveOrder_OrderNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("OrderNo", TempData["ActiveOrderSearchModel"] != null ? ((ActiveOrderSearchModel)TempData["ActiveOrderSearchModel"]).OrderNo : string.Empty)
            </div>
            <div class="search-label">
                <label>
                    @Resources.MRP.ActiveOrder.ActiveOrder_LocationFrom
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_LocationComboBox", "Common", new
        {
            controlName = "Location",
            selectedValue = TempData["ActiveOrderSearchModel"] != null ? ((ActiveOrderSearchModel)TempData["ActiveOrderSearchModel"]).Location : string.Empty

        });
                }
            </div>
            <div class="search-label">
                <label>
                    @Resources.MRP.ActiveOrder.ActiveOrder_Flow
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_FlowComboBox", "Common",
            new
            {
                controlName = "Flow",
                selectedValue = TempData["ActiveOrderSearchModel"] != null ? ((ActiveOrderSearchModel)TempData["ActiveOrderSearchModel"]).Flow : string.Empty
            });
                }
            </div>

            <div class="search-label">
                <label>
                    @Resources.MRP.ActiveOrder.ActiveOrder_Item
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_ItemComboBox", "Common",
            new
            {
                controlName = "Item",
                selectedValue = TempData["ActiveOrderSearchModel"] != null ? ((ActiveOrderSearchModel)TempData["ActiveOrderSearchModel"]).Item : string.Empty
            }); 
                }
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
        </div>
    }
</fieldset>

