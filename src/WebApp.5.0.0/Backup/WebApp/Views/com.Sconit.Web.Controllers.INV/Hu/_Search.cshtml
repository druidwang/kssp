@using com.Sconit.Web.Models.SearchModels.INV
<fieldset>
    @using (Html.BeginForm("List", "Hu"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="Hu_HuId">
                    @Resources.INV.Hu.Hu_HuId
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("HuId", TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).HuId : string.Empty)
            </div>
            <div class="search-label">
                <label for="Hu_Item">
                    @Resources.INV.Hu.Hu_Item
                </label>
            </div>
            <div class="search-field">

                @{
        Html.RenderAction("_ItemComboBox", "Common",
            new
            {
                controlName = "Item",
                selectedValue = TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).Item : string.Empty
            });
                    
                }
            </div>
            <div class="search-label">
                <label for="Hu_CreateUserName">
                    @Resources.INV.Hu.Hu_manufacture_date
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("LotNo", TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).LotNo : string.Empty)
            </div>
            <div class="search-label">
                <label for="LocationLotDetail_LotNoTo">
                    @Resources.INV.Hu.Hu_lotNoTo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("LotNoTo", TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).LotNoTo : string.Empty)
            </div>
            <div class="search-label">
                <label for="Hu_CreateUserName">
                    @Resources.INV.Hu.Hu_SupplierLotNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("SupplierLotNo", TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).SupplierLotNo : string.Empty)
            </div>
            <div class="search-label">
                <label for="Hu_CreateUserName">
                    @Resources.INV.Hu.Hu_CreateUserName
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("CreateUserName", TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).CreateUserName : (string)@ViewBag.CreateUserName)
            </div>
            <div class="search-label">
                <label for="Hu_StartDate">
                    @Resources.INV.Hu.Hu_StartDate
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Format("yyyy-MM-dd ").Name("StartDate")
.Value(TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).StartDate : System.DateTime.Today.AddDays(-7))
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="ProductLineLocationDetail_EndDate">
                    @Resources.INV.Hu.Hu_EndDate
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Format("yyyy-MM-dd ").Name("EndDate")
            .Value(TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).EndDate : System.DateTime.Today.AddDays(1))
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
            <button type="button" id="btnEdit" onclick="CheckedExport(false)" style="display: none">@Resources.SYS.Global.Button_Print</button>
            <button type="button" id="btnExport" onclick="CheckedExport(true)" style="display: none">@Resources.SYS.Global.Button_Export</button>
        </div>
    }
</fieldset>
