@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_Inventory_Hu_New" });
}
@{ Html.Telerik().TabStrip()
        .Name("TabStrip")
        .Items(tabstrip =>
        {
            //if (((List<string>)(@ViewBag.PrintHuPermissions)).Contains("Url_Inventory_Hu_New_Item"))
            //{
            tabstrip.Add()
                .Text(Resources.INV.Hu.Hu_Tab_Item)
                .LoadContentFrom("Item", "Hu")
                .HtmlAttributes(new { onclick = "CleanTabMessage()" });
           
            tabstrip.Add()
               .Text(Resources.INV.Hu.Hu_Tab_FlowMaster)
               .LoadContentFrom("FlowMaster", "Hu")
               .HtmlAttributes(new { onclick = "CleanTabMessage()" });
            
            tabstrip.Add()
                .Text(Resources.INV.Hu.Hu_Tab_OrderMaster_Production)
                .LoadContentFrom("OrderMaster", "Hu")
                .HtmlAttributes(new { onclick = "CleanTabMessage()" });
            
            tabstrip.Add()
                .Text(Resources.INV.Hu.Hu_Tab_IPMaster)
                .LoadContentFrom("IpMaster", "Hu")
                .HtmlAttributes(new { onclick = "CleanTabMessage()" });
            tabstrip.Add()
               .Text(Resources.INV.Hu.Hu_Tab_Parts)
               .LoadContentFrom("Parts", "Hu")
               .HtmlAttributes(new { onclick = "CleanTabMessage()" });
        })
        .Render();
}

@{ Html.Telerik().ScriptRegistrar()
        .OnDocumentReady(
            @<text>
                var tabIndex = "@TempData["TabIndex"]";
                var tabstrip = $("#TabStrip").data("tTabStrip");
                var item = $("li", tabstrip.element)[tabIndex != "" ? tabIndex : 0];
                tabstrip.select(item);
            </text>
        );
}
