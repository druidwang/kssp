        //    + '&TypeLocation=' + $("input[type=radio][name=TypeLocation]:checked").val()
        //    + '&SAPLocation=' + $('#SAPLocation').val();

        var t = $('form').attr('action');
        $('form').attr('action', "/ViewLocationLotDetail/ExportXLS/");
        $('form').submit();
        $('form').attr('action', t);

    }

</script>
