@using com.Sconit.Entity.MRP.MD
@using com.Sconit.Web.Models.SearchModels.CUST
<fieldset>
    @using (Html.BeginForm("List", "GeneralLedger"))
    {   
        <div class="search">
            <div class="search-label">
                <label>
                    @Resources.CUST.GeneralLedger.GeneralLedger_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["GeneralLedgerSearchModel"] != null ? ((GeneralLedgerSearchModel)TempData["GeneralLedgerSearchModel"]).Code : string.Empty)
            </div>
            <div class="search-label">
                <label>
                    @Resources.CUST.GeneralLedger.GeneralLedger_Description
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Description", TempData["GeneralLedgerSearchModel"] != null ? ((GeneralLedgerSearchModel)TempData["GeneralLedgerSearchModel"]).Description : string.Empty)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
            @Html.Button(Resources.SYS.Global.Button_New, "Url_GeneralLedger_View", new Dictionary<string, string>()
	    {
	        {"type", "button"},
	        {"id", "btnNew"},
            {"onclick","location.href='"+@Url.Content("~/GeneralLedger/New")+"'"}
	    })
        </div>
    }
</fieldset>
