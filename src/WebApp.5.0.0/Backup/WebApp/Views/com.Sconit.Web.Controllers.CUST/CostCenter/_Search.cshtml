@using com.Sconit.Entity.MRP.MD
@using com.Sconit.Web.Models.SearchModels.CUST
<fieldset>
    @using (Html.BeginForm("List", "CostCenter"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="CostCenter_Code">
                    @Resources.EXT.PageLan.Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["CostCenterSearchModel"] != null ? ((CostCenterSearchModel)TempData["CostCenterSearchModel"]).Code : string.Empty)
            </div>
            <div class="search-label">
                <label for="CostCenter_Code">
                    @Resources.EXT.PageLan.Description
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Description", TempData["CostCenterSearchModel"] != null ? ((CostCenterSearchModel)TempData["CostCenterSearchModel"]).Description : string.Empty)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
            @Html.Button(Resources.SYS.Global.Button_New, "Url_CostCenter_View", new Dictionary<string, string>()
	    {
	        {"type", "button"},
	        {"id", "btnNew"},
            {"onclick","location.href='"+@Url.Content("~/CostCenter/New")+"'"}
	    })
        </div>
    }
</fieldset>
