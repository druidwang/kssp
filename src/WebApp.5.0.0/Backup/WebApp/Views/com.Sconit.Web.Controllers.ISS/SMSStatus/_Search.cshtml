@using com.Sconit.Entity.ISS
@using com.Sconit.Web.Models.SearchModels.ISS
<fieldset>
    @using (Html.BeginForm("List", "SMSStatus"))
    {   
        <div class="search">
			<div class="search-label">
                <label for="Issue">
                    @Resources.ISS.SMSStatus.Issue
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Issue", TempData["SMSStatusSearchModel"] != null ? ((SMSStatusSearchModel)TempData["SMSStatusSearchModel"]).Issue : string.Empty)
            </div>
			<div class="search-label">
                <label for="Content">
                    @Resources.ISS.SMSStatus.Content
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Content", TempData["SMSStatusSearchModel"] != null ? ((SMSStatusSearchModel)TempData["SMSStatusSearchModel"]).Content : string.Empty)
            </div>
			<div class="search-label">
                <label for="DestID">
                    @Resources.ISS.SMSStatus.DestID
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("DestID", TempData["SMSStatusSearchModel"] != null ? ((SMSStatusSearchModel)TempData["SMSStatusSearchModel"]).DestID : string.Empty)
            </div>
			<div class="search-label">
                <label for="MsgId">
                    @Resources.ISS.SMSStatus.MsgID
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("MsgID", TempData["SMSStatusSearchModel"] != null ? ((SMSStatusSearchModel)TempData["SMSStatusSearchModel"]).MsgID : string.Empty)
            </div>
			<div class="search-label">
                <label for="DateFrom">
                    @Resources.ISS.SMSStatus.DateFrom
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Name("DateFrom").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="DateTo">
                    @Resources.ISS.SMSStatus.DateTo
                </label>
            </div>
            <div class="search-field">
               @(Html.Telerik().DatePicker().Name("DateTo").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
        </div>    
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
        </div>
    }
</fieldset>
