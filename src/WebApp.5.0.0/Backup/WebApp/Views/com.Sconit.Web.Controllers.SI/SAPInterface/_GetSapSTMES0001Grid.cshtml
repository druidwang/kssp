@model IEnumerable<com.Sconit.Entity.SI.SAP.SAPSTMES0001>
<fieldset>
    <legend>生产收货</legend>
    <input type="hidden" name="BatchNo"  id="BatchNo" value="@ViewBag.BatchNo"/>
    <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/SAPInterface/SAPTransferLogList")'">
        @Resources.SYS.Global.Button_Back</button>
    <br />
    <br />
    @(Html.Telerik().Grid(Model)
        .Name("STMES0001")
        .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.ZMESKO);
            columns.Bound(o => o.ZMESKOSEQ);
            columns.Bound(o => o.BWARTWA);
            columns.Bound(o => o.WERKS);
            columns.Bound(o => o.BLDAT);
            columns.Bound(o => o.BUDAT);
            columns.Bound(o => o.LGORT);
            columns.Bound(o => o.KOSTL);
            columns.Bound(o => o.LIFNR);
            columns.Bound(o => o.MATNR1);
            columns.Bound(o => o.EPFMG);
            columns.Bound(o => o.ERFME);
            columns.Bound(o => o.MATNR_TH);
            columns.Bound(o => o.UMLGO);
            columns.Bound(o => o.ZMESGUID);
            columns.Bound(o => o.ZCSRQSJ);
            columns.Bound(o => o.Status);
            columns.Bound(o => o.BatchNo);
            columns.Bound(o => o.UniqueCode);
            columns.Bound(o => o.DataType);
        })
        .NoRecordsTemplate("没有数据.")
        .Scrollable(c => c.Enabled(false))
        .Sortable()
        .EnableCustomBinding(true)
        .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxSTMES0001BatchNoList", "SAPInterface"))
        .ClientEvents(events => events.OnDataBinding("SAPSTMES0001_OnDataBinding"))
        .Pageable(settings =>
        {
            settings.Total(ViewBag.Total == null ? 0 : ViewBag.Total);
            settings.PageSize(ViewBag.PageSize == null ? 10 : ViewBag.PageSize);
        })
        .Resizable(resizing => resizing.Columns(true))
            )
</fieldset>
