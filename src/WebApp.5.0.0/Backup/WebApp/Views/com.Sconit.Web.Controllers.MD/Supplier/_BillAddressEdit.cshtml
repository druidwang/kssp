<script language="javascript" type="text/javascript">
    function btnDelete_BillAddress_Click() {
        var data = {
            "Id": $("#Id").val(),
            "PartyCode": $("#PartyCode").val()
        };
        $.ajax({
            type: "post",
            dataType: "html",
            url: "/Supplier/DeleteBillAddress/",
            data: data,
            cache:false,
            success: function (data, textStatus) {
                var tabStrip = $("#TabStrip");
                var tabStripContent1 = tabStrip.data("tTabStrip").getContentElement(1);
                $(tabStripContent1).html(data);
            }
        });
    }
    function btnSave_BillAddress_Click() {
        var data = {
            "PartyCode": $("#PartyCode").val(),
            "Id": $("#Id").val(),
            "Address.Code": $("#Address_Code").val(),
            "Address.AddressContent": $("#Address_AddressContent").val(),
            "Address.PostCode": $("#Address_PostCode").val(),
            "Address.MobilePhone": $("#Address_MobilePhone").val(),
            "Address.TelPhone": $("#Address_TelPhone").val(),
            "Address.ContactPersonName": $("#Address_MobilePhone").val(),
            "Address.Email": $("#Address_Email").val(),
            "Address.Fax": $("#Address_Fax").val(),
            "Sequence": $("#Sequence").val(),
            "IsPrimary": $("#IsPrimary").is(':checked')

        };
        $.ajax({
            type: "post",
            dataType: "html",
            url: "/Supplier/_BillAddressEdit/",
            data: data,
            success: function (data, textStatus) {
                var tabStrip = $("#TabStrip");
                var tabStripContent1 = tabStrip.data("tTabStrip").getContentElement(1);
                $(tabStripContent1).html(data);
            }
        });
    }

    function btnBack_BillAddress_Click() {
        var data = {
            "PartyCode": $("#PartyCode").val()
        };
        $.ajax({
            type: "get",
            dataType: "html",
            url: "/Supplier/_BillAddressList/",
            data: data,
            cache:false,
            success: function (data, textStatus) {
                var tabStrip = $("#TabStrip");
                var tabStripContent1 = tabStrip.data("tTabStrip").getContentElement(1);
                $(tabStripContent1).html(data);
            }
        });
    }
</script>


