@model com.Sconit.Entity.MD.Supplier 
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Menu.Procurement.Supplier" });
}
@using (Html.BeginForm("New", "Supplier"))
{
    <fieldset>
        <legend>@Resources.MD.Party.Party_Supplier_New_Title  </legend>
        <div class="editor">
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.ShortCode)
            </div>
            <div class="editor-field-2">
               @Html.EditorFor(model => model.ShortCode)
            </div>
             <div class="editor-label-2">
                @Html.LabelFor(model => model.PurchaseGroup)
            </div>
            <div class="editor-field-2">
               @Html.EditorFor(model => model.PurchaseGroup)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IsActive)
            </div>
            <div class="editor-field-2">
              @Html.CheckBox("IsActive",true)
            </div>
        </div>
        <div class="editor-footer">
     @Html.Button(Resources.SYS.Global.Button_New, "Url_Supplier_New", new Dictionary<string, string>()
	{
	    {"type", "submit"},
	    {"id", "btnNew"},
        {"needconfirm","true"}
	})
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/Supplier/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}