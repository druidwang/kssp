@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.MD.ItemPackage
@Html.Partial("_AjaxMessage")
@using (Html.BeginForm())
{
    <script language="javascript" type="text/javascript">
        function btnDeleteItemPackage_Click() {
            var data = {
                "Id": $("#Id").val(),
                "item": $("#Item").val()
            };
            $.ajax({
                type: "post",
                dataType: "html",
                url: "/Item/ItemPackageDelete/",
                data: data,
                cache: false,
                success: function (data, textStatus) {
                    var tabStrip = $("#TabStrip");
                    var tabStripContent2 = tabStrip.data("tTabStrip").getContentElement(2);
                    $(tabStripContent2).html(data);
                }
            });
        }

        function btnBackItemPackage_Click() {
            var data = {
                "Id": $("#Item").val()
            };
            $.ajax({
                type: "post",
                dataType: "html",
                url: "/Item/ItemPackage/",
                data: data,
                cache: false,
                success: function (data, textStatus) {
                    var tabStrip = $("#TabStrip");
                    var tabStripContent2 = tabStrip.data("tTabStrip").getContentElement(2);
                    $(tabStripContent2).html(data);
                }
            });
        }
</script>
    
    <fieldset>
        <legend>@Resources.MD.ItemPackage.ItemPackage_Edit_Title</legend>
            <div class="editor">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Item)
                @Html.HiddenFor(model => model.UnitCount)
                @Html.HiddenFor(model => model.IsDefault)
                @Html.HiddenFor(model => model.CreateUserName)
                @Html.HiddenFor(model => model.CreateDate)
                @Html.HiddenFor(model => model.LastModifyUserName)
                @Html.HiddenFor(model => model.LastModifyDate)
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Item)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.Item)
            </div>
              <div class="editor-label-2">
               @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field-2">
            @Html.TextBox("Description", Model.Description)
            </div>
            <div class="editor-label-2">
               @Html.LabelFor(model => model.UnitCount)
            </div>
             <div class="editor-field-2">
                @Html.DisplayFor(model => model.UnitCount)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IsDefault)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.IsDefault)
            </div>
        </div>
        <div class="editor-footer">
            @{
    if (!Model.IsDefault)
    {
        
    @Html.Button(Resources.SYS.Global.Button_Delete, "Url_Item_Delete", new Dictionary<string, string>()
	    {
	        {"type", "button"},
	        {"id", "btnDelete"},
            {"needconfirm","false"},
            {"onclick","btnDeleteItemPackage_Click()"}
	    })        
        @*<button type="button" id="btnDelete" onclick="btnDeleteItemPackage_Click()">
                @Resources.SYS.Global.Button_Delete</button>*@
    }
                }
            
            <button type="button" id="btnBack" onclick="btnBackItemPackage_Click()">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}




