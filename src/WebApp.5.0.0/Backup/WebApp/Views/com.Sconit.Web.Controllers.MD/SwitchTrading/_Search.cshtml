@using com.Sconit.Web.Models.SearchModels.MD
<fieldset>
    @using (Html.BeginForm("List", "SwitchTrading"))
    {   
        <div class="search">
        <div class="search-label">
                <label for="OrderMaster_Flow">
                    @Resources.MD.SwitchTrading.SwitchTrading_Flow
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_FlowComboBox", "Common",
            new
            {
                controlName = "Flow",
                selectedValue = TempData["SwitchTradingSearchModel"] != null ? ((SwitchTradingSearchModel)TempData["SwitchTradingSearchModel"]).Flow : string.Empty
            });
                }
            </div>
            <div class="search-label">
                <label for="FlowMaster_FirstName">
                    @Resources.MD.SwitchTrading.SwitchTrading_Supplier
                </label>
            </div>
            <div class="search-field">
                @{
                    Html.RenderAction("_SupplierComboBox", "Common", new
                    {
                        controlName = "Supplier",
                        selectedValue = TempData["SwitchTradingSearchModel"] != null ? ((SwitchTradingSearchModel)TempData["SwitchTradingSearchModel"]).Supplier : string.Empty
                    });
                }
            </div>
            <div class="search-label">
                <label>
                    @Resources.MD.SwitchTrading.SwitchTrading_Customer
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Customer", TempData["SwitchTradingSearchModel"] != null ? ((SwitchTradingSearchModel)TempData["SwitchTradingSearchModel"]).Customer : string.Empty)
            </div>
             <div class="search-label">
                <label for="FlowMaster_Code">
                    @Resources.MD.SwitchTrading.SwitchTrading_PurchaseGroup
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("PurchaseGroup", TempData["SwitchTradingSearchModel"] != null ? ((SwitchTradingSearchModel)TempData["SwitchTradingSearchModel"]).PurchaseGroup : string.Empty)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
                
        </div>

    }
</fieldset>
