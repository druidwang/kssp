@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.CUST.CostCenter
           
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_CostCenter_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.CUST.CostCenter.CostCenter_Edit_Title</legend>
        <div class="editor">
            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.CreateUserName)
            @Html.HiddenFor(model => model.CreateDate)
            @Html.HiddenFor(model => model.CreateUserId)
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.Code)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
            </div>
           
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnSave">
                @Resources.SYS.Global.Button_Save</button>
            @Html.Button(Resources.SYS.Global.Button_Delete, "Url_CostCenter_View", new Dictionary<string, string>()
	        {
	            {"type", "button"},
	            {"id", "btnDelete"},
                {"needconfirm","true"},
                {"onclick","location.href='"+@Url.Content("~/CostCenter/Delete/?Code="+@Model.Code)+"'"}
            })
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/CostCenter/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}
