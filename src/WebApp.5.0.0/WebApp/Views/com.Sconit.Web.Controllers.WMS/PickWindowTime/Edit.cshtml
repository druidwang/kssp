@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.WMS.PickWindowTime
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_PickWindowTime_View" });
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.WMS.PickWindowTime.PickWindowTime_Edit_Title</legend>
        <div class="editor">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.PickScheduleNo)
            @Html.HiddenFor(model => model.ShiftCode)
            @Html.HiddenFor(model => model.CreateUserName)
            @Html.HiddenFor(model => model.CreateDate)
            @Html.HiddenFor(model => model.LastModifyUserName)
            @Html.HiddenFor(model => model.LastModifyDate)
            <div class="editor-label-2">
                @Html.LabelFor(model => model.PickScheduleNo)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_PickScheduleComboBox", "Common", new
    {
        controlName = "PickScheduleNo",
        enabled = false,
        selectedValue = Model != null ? Model.PickScheduleNo : string.Empty
    });
            }
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.ShiftCode)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_ShiftComboBox", "Common", new
    {
        controlName = "ShiftCode",
        enabled = false,
        selectedValue = Model != null ? Model.ShiftCode : string.Empty
    });
            }
            </div>
            <div class="editor-label-2">
                <label>@Resources.WMS.PickWindowTime.PickWindowTime_WindowTime</label>
            </div>
            <div class="editor-field-1">
                @Resources.WMS.PickWindowTime.PickWindowTime_WinTimeToolTip
            </div>
            <div class="editor-label-2">
                <label>@Resources.WMS.PickWindowTime.PickWindowTime_WindowTime</label>
            </div>
            <div class="editor-field-1">
                @Html.EditorFor(model => model.WindowTime)
                @Html.ValidationMessageFor(model => model.WindowTime)
            </div>
        </div>
        <div class="editor-footer">
            @Html.Button(Resources.SYS.Global.Button_Save, "Url_PickWindowTime_Edit", new Dictionary<string, string>()
	{
	    {"type", "submit"},
	    {"id", "btnSave"}
	})
            @Html.Button(Resources.SYS.Global.Button_Delete, "Url_PickWindowTime_Delete", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnDelete"},
        {"needconfirm","true"},
        {"onclick","location.href='"+@Url.Content("~/PickWindowTime/Delete/"+@Model.Id)+"'"}
    })
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/PickWindowTime/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}
