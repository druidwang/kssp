//        $("tr.t-no-data").find("td").text("没有符合条件的记录...");
//        $(".t-grid-content").removeAttr("style");
    //    });
    function SAPSupplier_OnDataBinding(e) {
        e.data = {
            BatchNo: $('#BatchNo').val()
        };
    }
</script>
