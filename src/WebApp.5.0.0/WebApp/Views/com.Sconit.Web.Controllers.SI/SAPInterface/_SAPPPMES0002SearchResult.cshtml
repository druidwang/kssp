@model IEnumerable<com.Sconit.Entity.SI.SAP.SAPPPMES0002>
<fieldset>
    @(Html.Telerik().Grid(Model)
        .Name("SAPPPMES0002Grid")
        .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.ZMESSC);
            columns.Bound(o => o.ZMESLN);
            columns.Bound(o => o.ZPTYPE);
            columns.Bound(o => o.ZComnum);
            columns.Bound(o => o.ZMESGUID);
            columns.Bound(o => o.ZCSRQSJ);
            columns.Bound(o => o.CancelDate);
            //columns.Bound(o => o.BatchNo);
            //columns.Bound(o => o.UniqueCode);
            columns.Bound(o => o.Status);
        })
        .Scrollable(c => c.Height(265))
        .EnableCustomBinding(true)
        .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxSAPPPMES0002List", "SAPInterface"))
        .ClientEvents(events => events.OnDataBinding("SAPPPMES0002_OnDataBinding"))
        .Pageable(settings =>
        {
            settings.Total(ViewBag.Total != null ? ViewBag.Total : 0);
            settings.PageSize(ViewBag.PageSize);
            if (ViewBag.Page != null)
            {
                settings.PageTo(ViewBag.Page);
            }
        })
        .Sortable()
        .Resizable(resizing => resizing.Columns(true))
    )
    <script type="text/javascript">
        function SAPPPMES0002_OnDataBinding(e) {
            e.data = {
                ZComnum: $('#ZComnum').val(),
                ZMESSC: $('#ZMESSC').val(),
                MultiInterfaces: $('#MultiInterfaces').val(),
                TransStartDate: $('#TransStartDate').val(),
                TransEndDate: $("#TransEndDate").val(),
                Status: $("input[name='Status']:checked").val()
            }; 
        } 
    </script>
</fieldset>
