@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.TMS.Driver
@{
    ViewBag.Title = Resources.TMS.Driver.Driver_New_Title;
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_Driver_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.TMS.Driver.Driver_New_Title</legend>
        <div class="editor">
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Code)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Name)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IdNumber)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.IdNumber)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Email)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.MobilePhone)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.MobilePhone)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Phone)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Phone)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Address)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Address)
            </div>
             <div class="editor-label-2">
                @Html.LabelFor(model => model.PostCode)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.PostCode)
            </div>
             <div class="editor-label-2">
                @Html.LabelFor(model => model.Fax)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Fax)
            </div>
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnNew">
                @Resources.SYS.Global.Button_New</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/Driver/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}