@using com.Sconit.Web.Models.SearchModels.MD
@model com.Sconit.Entity.MD.ItemDiscontinue
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_ItemDiscontinue_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.MD.ItemDiscontinue.Item_New_Title</legend>
        <div class="editor">
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Item)
            </div>
            <div class="editor-field-2">
                  @{
    Html.RenderAction("_ItemComboBox", "Common", new
               {
                    controlName = "Item",
                    selectedValue = Model != null ? Model.Item : string.Empty
                     //selectedValue = TempData["ItemDiscontinue"] != null ? (ItemDiscontinue) : string.Empty
                });
                }
                 @Html.ValidationMessageFor(model => model.Item)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.DiscontinueItem)
            </div>
            <div class="editor-field-2">
                   @{
    Html.RenderAction("_ItemComboBox", "Common", new
               {
                   controlName = "DiscontinueItem",
                    selectedValue = Model != null ? Model.DiscontinueItem : string.Empty
                });
                }
                 @Html.ValidationMessageFor(model => model.DiscontinueItem)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.UnitQty)
            </div>
            <div class="editor-field-2">
                 @Html.Telerik().NumericTextBoxFor(model => model.UnitQty).DecimalDigits(0).MinValue(1)
                @Html.ValidationMessageFor(model => model.UnitQty)
            </div>
              <div class="editor-label-2">
                @Html.LabelFor(model => model.Priority)
            </div>
            <div class="editor-field-2">
                 @Html.Telerik().NumericTextBoxFor(model => model.Priority).DecimalDigits(0).MinValue(1)
                 @Html.ValidationMessageFor(model => model.Priority)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.StartDate)
            </div>
            <div class="editor-field-2">
                @(Html.Telerik().DatePicker().Name("StartDate").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:172px", }))
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.EndDate)
            </div>
            <div class="editor-field-2">
                 @(Html.Telerik().DatePicker().Name("EndDate").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:172px", }))
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Bom)
            </div>
            <div class="editor-field-2">
             @{
               Html.RenderAction("_BomComboBox", "Common", new
               {
                    controlName = "Bom",
                    selectedValue = Model != null ? Model.Bom : string.Empty
                });
                }
              
            </div>
            
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnNew">
                @Resources.SYS.Global.Button_New</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/ItemDiscontinue/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}