@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.FMS.MaintainPlan
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_MaintainPlan_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.FMS.MaintainPlan.MaintainPlan_New_Title</legend>
        <div class="editor">
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Period)
            </div>
            <div class="editor-field-2">
                @{
                    Html.RenderAction("_CodeMasterDropDownList", "Common", new
                    {
                        code = com.Sconit.CodeMaster.CodeMaster.MaintainPlanType,
                        controlName = "Type"
                    });
                }
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.TypePeriod)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.TypePeriod)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Period)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Period)
            </div>
               <div class="editor-label-2">
                @Html.LabelFor(model => model.LeadTime)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.LeadTime)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.FacilityCategory)
            </div>
            <div class="editor-field-2">
               @{
    Html.RenderAction("_FacilityCategoryComboBox", "Common",
                    new
                    {
                        controlName = "FacilityCategory"
                    });
                }
            </div>
          
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnNew">
                @Resources.SYS.Global.Button_New</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/MaintainPlan/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}