<script src="@Url.Content("~/Scripts/jquery.dualListBox-1.3.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $.configureBoxes(
        {
            box1View: 'boxView_UnAssignedPermissionGroups',
            box1Storage: 'boxStorage_UnAssignedPermissionGroupss',
            box2View: 'boxView_AssignedPermissionGroups',
            box2Storage: 'boxStorage_AssignedPermissionGroups',
            to1: 'to_UnAssignedPermissionGroups',
            allTo1: 'allTo_UnAssignedPermissionGroups',
            to2: 'to_AssignedPermissionGroups',
            allTo2: 'allTo_AssignedPermissionGroups',
            transferMode: 'move',
            useFilters: false,
            useCounters: false,
            useSorting: false,
            selectOnSubmit: true
        }
        );
    });

    $(document).ready(function () {
        $("#btnSubmit_AssignedPermissionGroups").click(function () {
            $("#boxView_AssignedPermissionGroups").each(function () {
                $(this).find("option").each(function () {
                    $(this).attr("selected", "selected");
                });
            });
        });
    });
</script>
@using (Html.BeginForm("_RolePermissionGroups", "Role"))
{
    <div>
        <table width="100%">
            <tr>
                <td>
                    @Resources.ACC.Role.Role_UnAssignedPermissionGroups<p />
                    <select id="boxView_UnAssignedPermissionGroups" multiple="multiple" style="height: 350px;
                        width: 350px;">
                        @if (ViewBag.UnAssignedPermissionGroup != null)
                        {
                            foreach (com.Sconit.Entity.ACC.PermissionGroup item in ViewBag.UnAssignedPermissionGroup)
                            {
                            <option value="@item.Id">@item.CodeDescription </option>  
                            }
                        }
                    </select><br />
                    <select id="boxStorage_UnAssignedPermissionGroupss">
                    </select>
                </td>
                <td align="center">
                    <table>
                        <tr>
                            <td>
                                <button id="to_AssignedPermissionGroups" type="button" style="width: 70px">
                                    ></button>
                                <button id="allTo_AssignedPermissionGroups" type="button" style="width: 70px">
                                    >></button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <button id="to_UnAssignedPermissionGroups" type="button" style="width: 70px">
                                    <</button>
                                <button id="allTo_UnAssignedPermissionGroups" type="button" style="width: 70px">
                                    <<</button>
                            </td>
                        </tr>
                    </table>
                </td>
                <td>
                    @Resources.ACC.Role.Role_AssignedPermissionGroups<p />
                    <select id="boxView_AssignedPermissionGroups" multiple="multiple" name="assignedRoleIds"
                        style="height: 350px; width: 350px;">
                        @if (ViewBag.AssignedPermissionGroup != null)
                        {
                            foreach (com.Sconit.Entity.ACC.PermissionGroup item in ViewBag.AssignedPermissionGroup)
                            {
                            <option value="@item.Id">@item.CodeDescription </option>  
                            }
                        }
                    </select><br />
                    <select id="boxStorage_AssignedPermissionGroups">
                    </select>
                </td>
            </tr>
        </table>
        <div class="editor-footer">
            <button type="submit" id="btnSubmit_AssignedPermissionGroups">
                @Resources.SYS.Global.Button_Save</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/Role/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </div> 
}