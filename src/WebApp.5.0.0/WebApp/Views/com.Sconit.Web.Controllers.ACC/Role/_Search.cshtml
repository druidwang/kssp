@using System.Collections
@using com.Sconit.Entity.ACC
@model IEnumerable<com.Sconit.Entity.ACC.Role>
<fieldset>
    @using (Html.BeginForm("List", "Role"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="Role_Desc">
                    @Resources.ACC.Role.Role_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["Role"] != null ? ((Role)TempData["Role"]).Code : string.Empty)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
            <button type="button" id="btnNew" onclick="location.href='@Url.Content("~/Role/New")'">
                @Resources.SYS.Global.Button_New</button>
        </div>

    }
</fieldset>
