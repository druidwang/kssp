@using com.Sconit.Entity.MD
@using com.Sconit.Entity.SYS
@using com.Sconit.Web.Models.SearchModels.ORD
<fieldset>
    @using (Html.BeginForm("List", "ShipmentMaster"))
    {   
        <div class="search">
            <div class="search-label">
                <label >
                    @Resources.ORD.ShipmentMaster.ShipmentMaster_ShipmentNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("ShipmentNo", TempData["ShipmentMasterSearchModel"] != null ? ((ShipmentMasterSearchModel)TempData["ShipmentMasterSearchModel"]).ShipmentNo : string.Empty)
            </div>
            <div class="search-label">
                <label >
                    @Resources.ORD.ShipmentMaster.ShipmentMaster_VehicleNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("VehicleNo", TempData["ShipmentMasterSearchModel"] != null ? ((ShipmentMasterSearchModel)TempData["ShipmentMasterSearchModel"]).VehicleNo : string.Empty)
            </div>
           
            <div class="editor-label-2">
                <label for="ReceiptMaster_PartyFrom">
                    @Resources.ORD.ShipmentMaster.ShipmentMaster_Driver
                </label>
            </div>
            <div class="editor-field-2">
                @Html.TextBox("Driver", TempData["ShipmentMasterSearchModel"] != null ? ((ShipmentMasterSearchModel)TempData["ShipmentMasterSearchModel"]).Driver : string.Empty)
            </div>
            <div class="editor-label-2">
                <label>
                    @Resources.ORD.ShipmentMaster.ShipmentMaster_Shipper
                </label>
            </div>
            <div class="editor-field-2">
                @Html.TextBox("Shipper", TempData["ShipmentMasterSearchModel"] != null ? ((ShipmentMasterSearchModel)TempData["ShipmentMasterSearchModel"]).Shipper : string.Empty)
            </div>
            <div class="search-label">
                <label >
                    @Resources.ORD.ShipmentMaster.ShipmentMaster_StartDate
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Format("yyyy-MM-dd ").Name("StartDate")
.Value(TempData["ShipmentMasterSearchModel"] != null ? ((ShipmentMasterSearchModel)TempData["ShipmentMasterSearchModel"]).StartDate : System.DateTime.Today.AddDays(-7))
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="IpMaster_EndDate">
                    @Resources.ORD.ShipmentMaster.ShipmentMaster_EndDate
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Format("yyyy-MM-dd ").Name("EndDate")
.Value(TempData["ShipmentMasterSearchModel"] != null ? ((ShipmentMasterSearchModel)TempData["ShipmentMasterSearchModel"]).EndDate : System.DateTime.Today.AddDays(1))
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
             
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
        </div>

    }
</fieldset>
