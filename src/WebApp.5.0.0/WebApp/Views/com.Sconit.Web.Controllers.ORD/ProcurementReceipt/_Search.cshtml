    <script type="text/javascript">
        function doClick(isNorma) {
            if (isNorma) {
                $("#lableFrom").text("@Resources.ORD.ReceiptMaster.ReceiptMaster_PartyFrom");
                $("#lableTo").html("@Resources.ORD.ReceiptMaster.ReceiptMaster_PartyTo");
            }
            else {
                $("#lableFrom").html("@Resources.ORD.ReceiptMaster.ReceiptMaster_PartyTo");
                $("#lableTo").html("@Resources.ORD.ReceiptMaster.ReceiptMaster_PartyFrom");
            }
        }
    </script>
</fieldset>
<script type="text/javascript">
    var t = "";
    $('#btnSearch').click(function () {

        if (t != "") {
            $('form').attr('action', t);
        }
        $('form').submit();
    });
    $('#btnExport').click(function () {

        if (t == "") {
            t = $('form').attr('action');
        }
        $('form').attr('action', "/ProcurementReceipt/ExportMstr/");
        $('form').submit();
    });

    function doClick(bl) {
        //debugger
        if ($('#IsReturn').is(":checked")) {
            $('#OrderSubType').attr("value", "1")
        }
        else if (!$('#IsReturn').is(":checked")) {
            $('#OrderSubType').attr("value", "0")
        }
        if ($('#IsDiff').is(":checked")) {
            $('#IpDetailType').attr("value", "1")
        }
        else if (!$('#IsDiff').is(":checked")) {
            $('#IpDetailType').attr("value", "0")
        }
    }
</script>