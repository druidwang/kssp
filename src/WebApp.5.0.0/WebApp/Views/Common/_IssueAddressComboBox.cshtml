@model System.Web.Mvc.SelectList
@{
    string name = ViewBag.ControlName;
    var selectedValue = ViewBag.SelectedValue;
    bool enable = true;
    if (ViewBag.Enable != null)
    {
        enable = ViewBag.Enable;
    }
    bool isChange = ViewBag.IsChange != null ? ViewBag.IsChange : false;
    string onChangeName = isChange ? "IssueAddress_Change" : "EmptyChange";
}


 @(Html.Telerik().ComboBox()
                .Name(name)
                .AutoFill(true)
                .DataBinding(binding => binding.Ajax().Select("_IssueAddressAjaxLoading", "Common").Cache(true))
                .HighlightFirstMatch(true)
                .BindTo(Model)
                     .ClientEvents(events => events.OnChange(onChangeName))
                .Value(selectedValue)
                .Enable(enable)
        )


    