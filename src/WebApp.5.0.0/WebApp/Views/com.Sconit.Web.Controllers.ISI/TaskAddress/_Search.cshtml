@using com.Sconit.Entity.ISI
@using com.Sconit.Web.Models.SearchModels.ISI
<fieldset>
    @using (Html.BeginForm("List", "TaskAddress"))
    {
        <div class="search">
            <div class="search-label">
                <label for="Code">
                    @Resources.ISI.TaskAddress.TaskAddress_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["TaskAddressSearchModel"] != null ? ((TaskAddressSearchModel)TempData["TaskAddressSearchModel"]).Code : string.Empty)
            </div>

            <div class="search-label">
                <label for="Description">
                    @Resources.ISI.TaskAddress.TaskAddress_Description
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Description", TempData["TaskAddressSearchModel"] != null ? ((TaskAddressSearchModel)TempData["TaskAddressSearchModel"]).Description : string.Empty)
            </div>
            <div class="search-label">
            </div>
            <div class="search-field">
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search
            </button>
            <button type="button" id="btnNew" onclick="location.href='@Url.Content("~/TaskAddress/New")'">
                @Resources.SYS.Global.Button_New
            </button>
        </div>
    }
</fieldset>
