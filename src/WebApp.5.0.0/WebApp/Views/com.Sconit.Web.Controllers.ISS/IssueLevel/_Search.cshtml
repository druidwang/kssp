@using com.Sconit.Entity.ISS
@using com.Sconit.Web.Models.SearchModels.ISS
<fieldset>
    @using (Html.BeginForm("List", "IssueLevel"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="Code">
                    @Resources.ISS.IssueLevel.Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["IssueLevelSearchModel"] != null ? ((IssueLevelSearchModel)TempData["IssueLevelSearchModel"]).Code : string.Empty)
            </div>

			<div class="search-label">
                <label for="Description">
                    @Resources.ISS.IssueLevel.Description
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Description", TempData["IssueLevelSearchModel"] != null ? ((IssueLevelSearchModel)TempData["IssueLevelSearchModel"]).Description : string.Empty)
            </div>

			<div class="search-label">
                <label for="User_IsActive">
                    @Resources.ISS.IssueLevel.IsActive
                </label>
            </div>
            <div class="search-field">
                @Html.CheckBox("IsActive", TempData["IssueLevelSearchModel"] != null ? ((IssueLevelSearchModel)TempData["IssueLevelSearchModel"]).IsActive : true)
            </div>
            <div class="search-label">
            </div>
            <div class="search-field">
            </div>
        </div>    
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
			<button type="button" id="btnNew" onclick="location.href='@Url.Content("~/IssueLevel/New")'">
                @Resources.SYS.Global.Button_New</button>
        </div>
    }
</fieldset>
