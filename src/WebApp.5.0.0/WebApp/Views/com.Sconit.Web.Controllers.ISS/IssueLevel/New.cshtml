@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.ISS.IssueLevel
@{
    ViewBag.Title = Resources.ISS.IssueLevel.New_Title;
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_IssueLevel_View" });
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.ISS.IssueLevel.New_Title</legend>
        <div class="editor">
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code)
            </div>
            
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
			<div class="editor-label-2">
                @Html.LabelFor(model => model.Sequence)
            </div>
			<div class="editor-field-2">
                @Html.EditorFor(model => model.Sequence)
                @Html.ValidationMessageFor(model => model.Sequence)
            </div>
			<div class="editor-label-2">
                @Html.LabelFor(model => model.IsDefault)
            </div>
            <div class="editor-field-2">
                @Html.CheckBox("IsDefault", false)
            </div>
            
			<div class="editor-label-2">
                @Html.LabelFor(model => model.IsSubmit)
            </div>
            <div class="editor-field-2">
                @Html.CheckBox("IsSubmit", false)
            </div>
			<div class="editor-label-2">
                @Html.LabelFor(model => model.IsInProcess)
            </div>
            <div class="editor-field-2">
                @Html.CheckBox("IsInProcess", false)
            </div>
            
			<div class="editor-label-2">
                @Html.LabelFor(model => model.IsActive)
            </div>
            <div class="editor-field-2">
                @Html.CheckBox("IsActive", true)
            </div>
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnNew">
                @Resources.SYS.Global.Button_New</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/IssueLevel/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}