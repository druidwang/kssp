@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.ISS.IssueTypeToMaster
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_IssueTypeTo_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.ISS.IssueTypeToMaster.Edit_Title</legend>
        <div class="editor">
            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.CreateUserName)
            @Html.HiddenFor(model => model.CreateDate)
            @Html.HiddenFor(model => model.LastModifyUserName)
            @Html.HiddenFor(model => model.LastModifyDate)
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.Code)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IssueType)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_IssueTypeDropDownList", "Common", new
    {
        controlName = "IssueTypeCode",
        includeBlankOption = true,
        selectedValue = Model.IssueTypeCode
    });
                }
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IssueLevel)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_IssueLevelDropDownList", "Common", new
    {
        controlName = "IssueLevelCode",
        includeBlankOption = true,
        selectedValue = Model.IssueLevelCode
    });
                }
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IsActive)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.IsActive)
            </div>
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnSave">
                @Resources.SYS.Global.Button_Save</button>
            <button type="button" id="btnDelete" onclick="location.href='@Url.Content("~/IssueTypeTo/Delete/" + @Model.Code)'">
                @Resources.SYS.Global.Button_Delete</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/IssueTypeTo/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
    
}
@{
    Html.RenderAction("_UserDetailList", "IssueTypeTo", new { id = Model.Code });
}
