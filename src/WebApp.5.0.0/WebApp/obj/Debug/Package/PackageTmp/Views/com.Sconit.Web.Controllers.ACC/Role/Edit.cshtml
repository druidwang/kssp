@{
    ViewBag.Title = Resources.ACC.Role .Role_Edit_Title ;
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_Role_View" });
}
@{ Html.Telerik().TabStrip()
        .Name("TabStrip")
        .Items(tabstrip =>
        {
            tabstrip.Add()
               .Text(Resources.ACC.Role.Role_Tab_Role)
                .LoadContentFrom("_Edit", "Role", new { id = Model });

            tabstrip.Add()
                .Text(Resources.ACC.Role.Role_Tab_RoleUsers)
                .LoadContentFrom("_RoleUsers", "Role", new { id = Model });

            tabstrip.Add()
                .Text(Resources.ACC.Role.Role_Tab_RolePermissionGroups)
                .LoadContentFrom("_RolePermissionGroups", "Role", new { id = Model });

            tabstrip.Add()
                .Text(Resources.ACC.Role.Role_Tab_RolePermissions )
                .LoadContentFrom("_RolePermissions", "Role", new { id = Model });
        })
        .Render();
}
@{ Html.Telerik().ScriptRegistrar()
        .OnDocumentReady(
    @<text> var tabIndex = "@TempData["TabIndex"]"; var tabstrip = $("#TabStrip").data("tTabStrip");
    var item = $("li", tabstrip.element)[tabIndex != "" ? tabIndex : 0]; tabstrip.select(item);
    </text>
        );
}
