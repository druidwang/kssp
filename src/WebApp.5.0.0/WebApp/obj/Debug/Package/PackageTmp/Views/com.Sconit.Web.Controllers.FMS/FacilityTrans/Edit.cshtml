@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.FMS.FacilityTrans
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_FacilityTrans_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.FMS.FacilityTrans.FacilityTrans_Edit_Title</legend>
        <div class="editor">
            @Html.HiddenFor(model => model.Id)
            <div class="editor-label-2">
                @Html.LabelFor(model => model.FCID)
            </div>
             <div class="editor-field-2">
                @Html.DisplayFor(model => model.FCID)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.TransTypeDescription)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.TransTypeDescription)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.FacilityCategory)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.FacilityCategory)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.EffDate)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.EffDate)
            </div>
             <div class="editor-label-2">
                @Html.LabelFor(model => model.CreateDate)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.CreateDate)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.CreateUserName)
            </div>
            <div class="editor-field-2">
               @Html.DisplayFor(model => model.CreateUserName)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Remark)
            </div>
            <div class="editor-field-1">
                @Html.DisplayFor(model => model.Remark)
            </div>
           
        </div>
        <div class="editor-footer">
            @Html.Button(Resources.SYS.Global.Button_Save, "Url_FacilityTrans_Edit", new Dictionary<string, string>()
	{
	    {"type", "submit"},
	    {"id", "btnSave"},
        {"needconfirm","true"}
	})
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/FacilityTrans/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}
