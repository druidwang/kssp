@using com.Sconit.Web.Models.SearchModels.MD

<fieldset>
<legend>@Resources.MD.Party.Party_CurrentParty:@ViewBag.PartyCode</legend>

        <div class="search">
            <div class="search-label">
                <label for="Address_Code">
                    @Resources.MD.Party.Party_AddressCode
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("ShipAddress_Code", TempData["CustomerShipAddressSearchModel"] != null ? ((CustomerShipAddressSearchModel)TempData["CustomerShipAddressSearchModel"]).AddressCode : string.Empty)
            </div>
            <div class="search-label">
                <label for="Address_Name">
                    @Resources.MD.Party.Party_AddressName
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("ShipAddress_AddressContent", TempData["CustomerShipAddressSearchModel"] != null ? ((CustomerShipAddressSearchModel)TempData["CustomerShipAddressSearchModel"]).AddressContent : string.Empty)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="button" id="btnSearch_ShipAddress" onclick="btnSearch_ShipAddress_Click()">
                @Resources.SYS.Global.Button_Search</button>
             @Html.Button(Resources.SYS.Global.Button_New, "Url_Customer_Edit", new Dictionary<string, string>()
	        {
	            {"type", "button"},
	            {"id", "btnNew_ShipAddress"},
                {"onclick","btnNew_ShipAddress_Click()"}
	        })
            <button type="button" id="btnBack_ShipAddress" onclick="location.href='@Url.Content("~/Customer/List")'">
                @Resources.SYS.Global.Button_Back
            </button>
        </div>
</fieldset>

<script type="text/javascript">

    function btnSearch_ShipAddress_Click() {
        var data = {
            "PartyCode": $("#PartyCode").val(),
            "AddressCode": $("#ShipAddress_Code").val(),
            "AddressContent": $("#ShipAddress_AddressContent").val(),
            "isFromList": "true"
        };
        $.ajax({
            type: "post",
            dataType: "html",
            url: "/Customer/_ShipAddressList/",
            data: data,
            success: function (data, textStatus) {
                var tabStrip = $("#TabStrip");
                var tabStripContent2 = tabStrip.data("tTabStrip").getContentElement(2);
                $(tabStripContent2).html(data);
            }
        });
    }

    function btnNew_ShipAddress_Click() {
        var data = {
            "PartCode": $("#PartCode").val()
        };
        $.ajax({
            type: "get",
            dataType: "html",
            url: "/Customer/_ShipAddressNew/",
            data: "",
            success: function (data, textStatus) {
                var tabStrip = $("#TabStrip");
                var tabStripContent2 = tabStrip.data("tTabStrip").getContentElement(2);
                $(tabStripContent2).html(data);
            }
        });
    }
</script>
