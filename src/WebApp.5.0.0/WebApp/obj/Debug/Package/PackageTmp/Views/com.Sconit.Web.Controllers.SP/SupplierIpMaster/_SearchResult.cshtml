
@model IEnumerable<com.Sconit.Entity.ORD.IpMaster>
<fieldset>
    @(Html.Telerik().Grid(Model)
                .Name("IpMasterGrid")
        .DataKeys(keys =>
        {
            keys.Add(p => p.IpNo);
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.IpNo).ClientTemplate(Html.ActionLink("<#= IpNo #>", "_Edit", "SupplierIpMaster", new { IpNo = "<#= IpNo #>" },null).ToString());
            //columns.Bound(o => o.WMSNo);
            columns.Bound(o => o.Flow).ClientTemplate("<div title=<#=FlowDescription #>><#=Flow #></div>");
            columns.Bound(o => o.IpMasterStatusDescription);
            //columns.Bound(o => o.PartyFromName).ClientTemplate("<div title=<#=ShipFromAddress #>><#=PartyFromName #></div>");
            //columns.Bound(o => o.PartyToName).ClientTemplate("<div title=<#=PartyToName #>><#=PartyToName #></div>");
            //columns.Bound(o => o.ShipFromAddress);
            columns.Bound(o => o.ShipToAddress);
            columns.Bound(o => o.ArriveTime).Title("窗口时间");
            columns.Bound(o => o.CreateUserName);
            columns.Bound(o => o.CreateDate);
                 }) 
                .Scrollable(c => c.Enabled(false))
                        .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxList", "SupplierIpMaster"))
                .ClientEvents(events => events.OnDataBinding("IpMasterGrid_OnDataBinding"))
                .Pageable(settings =>
                {
                    settings.Total(ViewBag.Total == null ? 0 : ViewBag.Total);
                    settings.PageSize(ViewBag.PageSize );
                    if (ViewBag.Page != null)
                    {
                        settings.PageTo(ViewBag.Page);
                    }
                })
                .EnableCustomBinding(true)
                .Sortable()
                .Resizable(resizing => resizing.Columns(true))
            )
    <script type="text/javascript">
        function IpMasterGrid_OnDataBinding(e) {
            e.data = {
                IpNo: $('#IpNo').val(),
                Dock: $('#Dock').val(),
                //PartyFrom: $('#PartyFrom').val(),
                PartyTo: $('#PartyTo').val(),
                OrderSubType: $('#OrderSubType').val(),
                ShipFrom: $('#ShipFrom').val(),
                ShipTo: $('#ShipTo').val(),
                StartDate: $('#StartDate').val(),
                EndDate: $('#EndDate').val(),
                Status: $('#Status').val(),
                 WMSNo: $('#WMSNo').val(),
                 Flow:$("#Flow").val()
            
            };
        }
    </script>
</fieldset>
