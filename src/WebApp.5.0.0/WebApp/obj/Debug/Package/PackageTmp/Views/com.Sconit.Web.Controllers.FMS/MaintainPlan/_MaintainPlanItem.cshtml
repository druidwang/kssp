@using com.Sconit.Entity.MD;
@using com.Sconit.Entity.INV;
@model IEnumerable<com.Sconit.Entity.FMS.MaintainPlanItem>   

<fieldset>
    <legend>备件明细</legend>
    @(Html.Telerik().Grid(Model)
        .Name("MaintainPlanItem")
        .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })
      
        .Columns(columns =>
        {
            columns.Bound(o => o.Id).Hidden();
            columns.Bound(o => o.Item).ReadOnly().Title("备件代码");
            columns.Bound(o => o.ItemDescription).ReadOnly().Title("备件名称");
            columns.Bound(o => o.LocationFrom).ReadOnly().Title("库位");
            columns.Bound(o => o.Uom).ReadOnly().Title("单位");
            columns.Bound(o => o.Qty).ReadOnly().Title("数量");

        
                  })   
            .CellAction(cell =>
                 {
                    
                 })
            
   
        .Scrollable(c => c.Enabled(false))
        .Footer(false)
            )
</fieldset>
