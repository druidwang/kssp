@model IEnumerable<com.Sconit.Entity.PRD.ProductLineLocationDetail>
<fieldset>
    <legend>@Resources.PRD.ProductLineLocationDetail.ProductLineLocationDetail_FeedQty_Detail</legend>
    @(Html.Telerik().Grid(Model)
                .Name("ProductLineLocationDetail")

       .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })

        .Columns(columns =>
        {
            columns.Bound(o => o.Item).HtmlAttributes(new { Id = "Item" });
            columns.Bound(o => o.ReferenceItemCode);
            columns.Bound(o => o.ItemDescription);
            columns.Bound(o => o.Uom);
            columns.Bound(o => o.UnitCount);
            columns.Bound(o => o.Qty);
            columns.Bound(o => o.RemainQty).HtmlAttributes(new { Id = "RemainQty" });
            columns.Bound(o => o.CurrentRemainQty).ClientTemplate("<input type='text' id='CurrentRemainQty' name='CurrentRemainQty' style='width:70px' value='<#= CurrentRemainQty #>'/>");
        })
                  .CellAction(cell =>
                  {
                      if (cell.Column.Member == "CurrentRemainQty")
                      {
                          cell.Text = string.Format("<input type='text' id='CurrentRemainQty' name='CurrentRemainQty' style='width:70px' value='" + cell.DataItem.CurrentRemainQty + "'/>");
                      }
                  })
        .Scrollable(c => c.Enabled(false))
        .Resizable(resizing => resizing.Columns(true))
        .Footer(false)
        )
</fieldset>
