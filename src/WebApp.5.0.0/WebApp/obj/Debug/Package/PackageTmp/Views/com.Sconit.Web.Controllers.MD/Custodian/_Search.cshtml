@using com.Sconit.Entity.MD
@using com.Sconit.Web.Models.SearchModels.MD
<fieldset>
    @using (Html.BeginForm("List", "Custodian"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="Custodian_UserId">
                    @Resources.MD.Custodian.Custodian_UserCode
                </label>
            </div>
            <div class="search-field">
               @{
        Html.RenderAction("_UserComboBox", "Common",
         new
         {
             ControlName = "UserCode",
             selectedValue = TempData["CustodianSearchModel"] != null ? ((CustodianSearchModel)TempData["CustodianSearchModel"]).UserCode : string.Empty
         });
                }
            </div>
             <div class="search-label">
                <label for="">
                </label>
            </div>
            <div class="search-field">
            </div>
        </div>
        <div class="search-footer">
         @Html.Hidden("isFromList", true)
         <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
         <button type="button" id="btnNew" onclick="location.href='@Url.Content("~/Custodian/New")'">
                @Resources.SYS.Global.Button_New</button>
        </div>

    }
</fieldset>
