@using com.Sconit.Entity.MRP.MD
@using com.Sconit.Web.Models.SearchModels.CUST
<fieldset>
    @using (Html.BeginForm("List", "ItemProperty"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="Machine_Code">
                    @Resources.CUST.ItemProperty.ItemProperty_RmItem
                </label>
            </div>
            <div class="search-field">
                 @{
        Html.RenderAction("_ItemComboBox", "Common",
            new
            {
                controlName = "RmItem",
                selectedValue = TempData["ItemPropertySearchModel"] != null ? ((ItemPropertySearchModel)TempData["ItemPropertySearchModel"]).RmItem : string.Empty
            });
                    
                }
            </div>
             <div class="search-label">
                <label for="Machine_Description">
                     @Resources.CUST.ItemProperty.ItemProperty_Flow
                </label>
            </div>
            <div class="search-field">
                     @{
        Html.RenderAction("_FlowComboBox", "Common",
            new
            {
                controlName = "Flow",
                type = (int)com.Sconit.CodeMaster.OrderType.Production,
                resourceGroup = 20,
                selectedValue = TempData["ItemPropertySearchModel"] != null ? ((ItemPropertySearchModel)TempData["ItemPropertySearchModel"]).Flow : string.Empty
            });
                }
            </div>
              

        </div>
        <div class="search-footer">
         @Html.Hidden("isFromList", true)
           <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
           
          @Html.Button(Resources.SYS.Global.Button_New, "CUST_ItemProperty_View", new Dictionary<string, string>()
	    {
	        {"type", "button"},
	        {"id", "btnNew"},
            {"onclick","location.href='"+@Url.Content("~/ItemProperty/New")+"'"}
	    })
        </div>

    }
</fieldset>
