@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.FMS.CheckListMaster
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_CheckList_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.FMS.CheckList.CheckList_Edit_Title</legend>
        <div class="editor">
            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.CreateUserName)
            @Html.HiddenFor(model => model.CreateDate)
            @Html.HiddenFor(model => model.LastModifyUserName)
            @Html.HiddenFor(model => model.LastModifyDate)
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.Code)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Name)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Region)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Region)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
            </div>
        </div>
        <div class="editor-footer">
            @Html.Button(Resources.SYS.Global.Button_Save, "Url_CheckList_Edit", new Dictionary<string, string>()
	{
	    {"type", "submit"},
	    {"id", "btnSave"},
        {"needconfirm","true"}
	})
            @Html.Button(Resources.SYS.Global.Button_Delete, "Url_CheckList_Edit", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnDelete"},
        {"needconfirm","true"},
        {"onclick","location.href='"+@Url.Content("~/CheckList/Delete/"+@Model.Code)+"'"}
    })
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/CheckList/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}
<div id="divCheckListDetail">
    @{Html.RenderAction("_CheckListDetail", "CheckList", new { CheckListCode = Model.Code });}
</div>
