@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.FMS.FacilityMaster
@Html.Partial("_AjaxMessage")
<form action="/FacilityMaster/_Edit" method="post">
<fieldset>
    <legend>@Resources.FMS.FacilityMaster.FacilityMaster_Edit_Title</legend>
    <div class="editor">
        @Html.HiddenFor(model => model.FCID)
        <div class="editor-label-2">
            @Html.LabelFor(model => model.FCID)
        </div>
        <div class="editor-field-2">
            @Html.DisplayFor(model => model.FCID)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.Name)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.Category)
        </div>
        <div class="editor-field-2">
            @{
                Html.RenderAction("_FacilityCategoryComboBox", "Common",
                    new
                    {
                        selectedValue = Model.Category,
                        controlName = "Category"
                    });
            }
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.Specification)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.Specification)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.Capacity)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.Capacity)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.ManufactureDate)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.ManufactureDate)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.Manufacturer)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.Manufacturer)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.SerialNo)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.SerialNo)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.AssetNo)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.AssetNo)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.WarrantyInfo)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.WarrantyInfo)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.TechInfo)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.TechInfo)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.Supplier)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.Supplier)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.SupplierInfo)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.SupplierInfo)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.PONo)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.PONo)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.EffDate)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.EffDate)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.Owner)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.Owner)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.OwnerDescription)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.OwnerDescription)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field-2">
            @Html.EditorFor(model => model.Price)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.RefenceCode)
        </div>
        <div class="editor-field-2">
            @Html.TextBoxFor(model => model.RefenceCode)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.IsOffBalance)
        </div>
        <div class="editor-field-2">
            @Html.CheckBox("IsOffBalance", false)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.IsAsset)
        </div>
        <div class="editor-field-2">
            @Html.CheckBox("IsAsset", true)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.CurrChargePersonName)
        </div>
        <div class="editor-field-2">
            @{
                Html.RenderAction("_WmsUserComboBox", "Common",
                new
                {
                    controlName = "CurrChargePersonId"
                });
            }
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.ChargeSite)
        </div>
        <div class="editor-field-2">
            @Html.TextBoxFor(model => model.ChargeSite)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.ChargeOrganization)
        </div>
        <div class="editor-field-2">
            @Html.TextBoxFor(model => model.ChargeOrganization)
        </div>
        <div class="editor-label-2">
            @Html.LabelFor(model => model.MaintainGroup)
        </div>
        <div class="editor-field-2">
            @Html.TextBoxFor(model => model.MaintainGroup)
        </div>
    </div>
    <div class="editor-footer">
        @Html.Button(Resources.SYS.Global.Button_Save, "Url_FacilityMaster_Edit", new Dictionary<string, string>()
	{
	    {"type", "submit"},
	    {"id", "btnSave"},
        {"needconfirm","true"}
	})
        @Html.Button(Resources.SYS.Global.Button_Delete, "Url_FacilityMaster_Delete", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnDelete"},
        {"needconfirm","true"},
        {"onclick","location.href='"+@Url.Content("~/FacilityMaster/Delete/"+@Model.FCID)+"'"}
    })
        <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/FacilityMaster/List")'">
            @Resources.SYS.Global.Button_Back</button>
    </div>
</fieldset>
</form>
<script type="text/javascript">

    $(document).ready(function () {
        $("#TabStrip .t-item:eq(0)").click(function () {
            //window.location.reload(true);
        });
    });

    $(document).ready(function () {
        $("form[action$='Edit']").submit(function () {
            $.post($(this).attr("action"), $(this).serialize(), function (response) {
                var tabStrip = $("#TabStrip");
                var tabStripContent0 = tabStrip.data("tTabStrip").getContentElement(0);
                $(tabStripContent0).html(response);
            });
            return false;
        });
    });
</script>
