@using com.Sconit.Web.Models.SearchModels.INP
@using com.Sconit.Entity.SYS
<fieldset>
    @using (Html.BeginForm("List", "ConcessionOrder"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="ConcessionMaster_ConcessionNo">
                    @Resources.INP.ConcessionMaster.ConcessionMaster_ConcessionNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("ConcessionNo", TempData["ConcessionMasterSearchModel"] != null ? ((ConcessionMasterSearchModel)TempData["ConcessionMasterSearchModel"]).ConcessionNo : string.Empty)
            </div>
            <div class="search-label">
                <label for="ConcessionMaster_Status">
                    @Resources.INP.ConcessionMaster.ConcessionMaster_Status
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_CodeMasterDropDownList", "Common", new
        {
            code = com.Sconit.CodeMaster.CodeMaster.ConcessionStatus,
            controlName = "Status",
            includeBlankOption = true,
            blankOptionDescription = CodeDetail.SpecialValueEnum.BlankValue,
            blankOptionValue = "",
            selectedValue = TempData["ConcessionMasterSearchModel"] != null ? ((ConcessionMasterSearchModel)TempData["ConcessionMasterSearchModel"]).Status : null
        });
                }
            </div>
            <div class="search-label">
                <label for="ConcessionMaster_StartDate">
                    @Resources.INP.ConcessionMaster.ConcessionMaster_StartDate
                </label>
            </div>
            <div class="search-field">

                           @(Html.Telerik().DatePicker().Format("yyyy-MM-dd").Name("StartDate")
.Value(TempData["ConcessionMasterSearchModel"] != null ? ((ConcessionMasterSearchModel)TempData["ConcessionMasterSearchModel"]).EndDate : System.DateTime.Today.AddDays(-7))
                 .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))

            </div>
            <div class="search-label">
                <label for="ConcessionMaster_EndDate">
                    @Resources.INP.ConcessionMaster.ConcessionMaster_EndDate
                </label>
            </div>
            <div class="search-field">
                             @(Html.Telerik().DatePicker().Format("yyyy-MM-dd").Name("EndDate")
.Value(TempData["ConcessionMasterSearchModel"] != null ? ((ConcessionMasterSearchModel)TempData["ConcessionMasterSearchModel"]).EndDate : System.DateTime.Today.AddDays(1))
                 .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
      
            </div>
            <div class="search-label">
                <label for="ConcessionMaster_StartDate">
                    @Resources.INP.ConcessionMaster.ConcessionMaster_CreateUserName
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("CreateUserName", TempData["ConcessionMasterSearchModel"] != null ? ((ConcessionMasterSearchModel)TempData["ConcessionMasterSearchModel"]).CreateUserName : string.Empty)
            </div>
            <div class="search-label">
            </div>
            <div class="search-field">
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
        </div>

    }
</fieldset>
