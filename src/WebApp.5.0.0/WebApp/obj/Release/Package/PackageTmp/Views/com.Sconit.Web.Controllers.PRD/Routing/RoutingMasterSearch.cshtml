@using com.Sconit.Web.Models.SearchModels.PRD
<fieldset>
    @using (Html.BeginForm("RoutingMasterList", "Routing"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="RoutingMaster_Code">
                    @Resources.PRD.Routing.RoutingMaster_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["RoutingMasterSearchModel"] != null ? ((RoutingMasterSearchModel)TempData["RoutingMasterSearchModel"]).Code : string.Empty)
            </div>
            <div class="search-label">
                <label for="RoutingMaster_Name">
                    @Resources.PRD.Routing.RoutingMaster_Name
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Name", TempData["RoutingMasterSearchModel"] != null ? ((RoutingMasterSearchModel)TempData["RoutingMasterSearchModel"]).Name : string.Empty)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
            @Html.Button(Resources.SYS.Global.Button_New, "Url_Routing_Edit", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnNew"},
        {"onclick","location.href='"+Url.Content("~/Routing/RoutingMasterNew/") +"'"}
	})

        </div>

    }
</fieldset>
