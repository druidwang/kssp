@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.FMS.FacilityCategory
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_FacilityCategory_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.FMS.FacilityCategory.FacilityCategory_New_Title</legend>
        <div class="editor">
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.ChargePersonName)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_WmsUserComboBox", "Common",
                    new
                    {
                        controlName = "ChargePersonId"
                    });
                }
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.ChargeSite)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.ChargeSite)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.ChargeOrganization)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.ChargeOrganization)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.ParentCategory)
            </div>
            <div class="editor-field-2">
               @{
                Html.RenderAction("_FacilityCategoryComboBox", "Common",
                    new
                    {
                        controlName = "ParentCategory"
                    });
                }
            </div>
          
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnNew">
                @Resources.SYS.Global.Button_New</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/Address/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}