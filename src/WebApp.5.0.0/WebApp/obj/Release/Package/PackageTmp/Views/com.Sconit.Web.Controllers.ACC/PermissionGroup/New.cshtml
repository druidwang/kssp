@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.ACC.PermissionGroup 
@{
    ViewBag.Title = Resources.ACC.PermissionGroup.PermissionGroup_New_Title;
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_PermissionGroup_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.ACC.PermissionGroup.PermissionGroup_New_Title </legend>
        <div class="editor">
          
            <div class="editor-label-2">
            <label>
              @Resources.ACC.PermissionGroup.PermissionGroup_Code
              </label>
            </div>
              <div class="editor-field-2">
              
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code)
            </div>
            <div class="editor-label-2">
            <label>
                @Resources.ACC.PermissionGroup.PermissionGroup_Desc
                </label>
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnNew">
                @Resources.SYS.Global.Button_New</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/PermissionGroup/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}