@using com.Sconit.Entity.ISI
@using com.Sconit.Web.Models.SearchModels.TMS
<fieldset>
    @using (Html.BeginForm("List", "Driver"))
    {
        <div class="search">
            <div class="search-label">
                <label for="Code">
                    @Resources.TMS.Driver.Driver_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["DriverSearchModel"] != null ? ((DriverSearchModel)TempData["DriverSearchModel"]).Code : string.Empty)
            </div>

            <div class="search-label">
                <label for="Description">
                    @Resources.TMS.Driver.Driver_Name
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Description", TempData["DriverSearchModel"] != null ? ((DriverSearchModel)TempData["DriverSearchModel"]).Name : string.Empty)
            </div>
            <div class="search-label">
            </div>
            <div class="search-field">
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search
            </button>
            <button type="button" id="btnNew" onclick="location.href='@Url.Content("~/Driver/New")'">
                @Resources.SYS.Global.Button_New
            </button>
        </div>
    }
</fieldset>
