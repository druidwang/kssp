@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.ACC.Role
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_Role_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.ACC.Role.Role_New_Title   </legend>
        <div class="editor">
            <div class="editor-label-2">
            <label>
                @Resources.ACC.Role.Role_Code 
                </label>
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code)
            </div>
            <div class="editor-label-2">
            <label>
                @Resources.ACC.Role.Role_Desc 
                </label>
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-label-2">
                <label for="Role_Type" style="visibility: hidden">
                    @Resources.SYS.Global.Role_Type
                </label>
            </div>
            <div class="editor-field-2">
                <label for="Role_Type" style="visibility: hidden">
                    @ViewBag.NewType
                </label>
            </div>
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnNew">
                @Resources.SYS.Global.Button_New</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/Role/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}