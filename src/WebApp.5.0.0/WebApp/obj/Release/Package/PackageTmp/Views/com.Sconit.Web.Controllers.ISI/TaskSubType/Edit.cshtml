@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.ISI.TaskSubType
@{
    ViewBag.Title = Resources.ISI.TaskSubType.TaskSubType_Edit_Title;
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_TaskSubType_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.ISI.TaskSubType.TaskSubType_Edit_Title</legend>
        <div class="editor">
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Code)
                @Html.HiddenFor(model => model.Code)
            </div>
            <div class="editor-field-2">
                @Html.DisplayFor(model => model.Code)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IsActive)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.IsActive)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IsAutoAssign)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.IsAutoAssign)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IsAutoComplete)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.IsAutoComplete)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.IsAutoClose)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.IsAutoClose)
            </div>
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnSave">
                @Resources.SYS.Global.Button_Save
            </button>
            <button type="button" id="btnDelete" onclick="location.href='@Url.Content("~/TaskSubType/Delete/" + @Model.Code)'">
                @Resources.SYS.Global.Button_Delete
            </button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/TaskSubType/List")'">
                @Resources.SYS.Global.Button_Back
            </button>
        </div>


    </fieldset>
}


