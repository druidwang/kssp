@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.MRP.ORD.MrpExWorkHour
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_MrpExWorkHour_View" });
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.MRP.MrpExWorkHour.MrpExWorkHour_Edit_Title</legend>
        <div class="editor">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CreateUserName)
            @Html.HiddenFor(model => model.ItemDescription)
            @Html.HiddenFor(model => model.CreateUserId)
            @*@Html.HiddenFor(model => model.LastModifyUserName)
            @Html.HiddenFor(model => model.LastModifyDate)*@
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Flow)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_FlowComboBox", "Common", new
    {
        controlName = "Flow",
        type = (int)com.Sconit.CodeMaster.OrderType.Production,
        selectedValue = Model.Flow,
        //isChange = true,
        isCreateOrder = false,
        resourceGroup = (int)com.Sconit.CodeMaster.ResourceGroup.EX,
        isMrp = true
    });
                }
                @Html.ValidationMessageFor(model => model.Flow)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Item)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_ItemComboBox", "Common",
    new
    {
        controlName = "Item",
        selectedValue = Model.Item,
        //includeBlankOption = true,
        itemCategory = "ZHDM"
    });
                }
                @Html.ValidationMessageFor(model => model.Item)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.StartTime)
            </div>
            <div class="editor-field-2">
                @(Html.Telerik().DateTimePicker().Format("yyyy-MM-dd HH:mm:ss").Name("StartTime"))
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.WindowTime)
            </div>
            <div class="editor-field-2">
                @(Html.Telerik().DateTimePicker().Format("yyyy-MM-dd HH:mm:ss").Name("WindowTime"))
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.HaltTime)
            </div>
            <div class="editor-field-2">
                @Html.Telerik().NumericTextBoxFor(model => model.HaltTime).DecimalDigits(2).MinValue(0).MaxValue(100) 小时
            </div>
        </div>
        <div class="editor-footer">
            @Html.Button(Resources.SYS.Global.Button_Save, "Url_MrpExWorkHour_Edit", new Dictionary<string, string>()
	{
	    {"type", "submit"},
	    {"id", "btnSave"}
	})
            @Html.Button(Resources.SYS.Global.Button_Delete, "Url_MrpExWorkHour_Delete", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnDelete"},
        {"needconfirm","true"},
        {"onclick","location.href='"+@Url.Content("~/MrpExWorkHour/Delete/"+@Model.Id)+"'"}
    })
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/MrpExWorkHour/List")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
    </fieldset>
}
