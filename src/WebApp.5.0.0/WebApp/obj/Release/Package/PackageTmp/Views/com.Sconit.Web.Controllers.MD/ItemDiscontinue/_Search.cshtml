@using com.Sconit.Entity.MD
@using com.Sconit.Web.Models.SearchModels.MD
<fieldset>
    @using (Html.BeginForm("List", "ItemDiscontinue"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="Item_Code">
                    @Resources.MD.ItemDiscontinue.ItemDiscontinue_Item
                </label>
            </div>
            <div class="search-field">
               @{
        Html.RenderAction("_ItemComboBox", "Common", new
                               {
                                   controlName = "Item",
                                    selectedValue = TempData["ItemDiscontinueSearchModel"] != null ? ((ItemDiscontinueSearchModel)TempData["ItemDiscontinueSearchModel"]).Item : null 
                                });
                }
            </div>
             <div class="search-label">
                <label for="Item_Description">
                    @Resources.MD.ItemDiscontinue.ItemDiscontinue_DisconItem
                </label>
            </div>
            <div class="search-field">

                  @{
        Html.RenderAction("_ItemComboBox", "Common", new
                               {
                                   controlName = "DiscontinueItem",
                                   selectedValue = TempData["ItemDiscontinueSearchModel"] != null ? ((ItemDiscontinueSearchModel)TempData["ItemDiscontinueSearchModel"]).DiscontinueItem : null 
                                });
                }
            </div>
             <div class="search-label">
                <label for="Item_IsActive">
                    @Resources.MD.ItemDiscontinue.ItemDiscontinue_StartDate
                </label>
            </div>
            <div class="search-field">
                 @(Html.Telerik().DatePicker().Name("StartDate").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:172px", }))
            </div>
              <div class="search-label">
                <label for="Item_IsActive">
                    @Resources.MD.ItemDiscontinue.ItemDiscontinue_EndDate
                </label>
            </div>
            <div class="search-field">
                 @(Html.Telerik().DatePicker().Name("EndDate").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:172px", }))
            </div>

        </div>
        <div class="search-footer">
         @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
            <button type="button" id="btnNew" onclick="location.href='@Url.Content("~/ItemDiscontinue/New")'">
                @Resources.SYS.Global.Button_New</button>
        </div>

    }
</fieldset>
