@{
  
    @(Html.Telerik().ComboBox().HtmlAttributes(new { style = "width: 80px;display: block;" })
    .DropDownHtmlAttributes(new { style = "width: 200px; " })
    .Name(ViewData.TemplateInfo.GetFullHtmlFieldName(""))
        .DataBinding(binding => binding.Ajax().Select("_SectionAjaxLoadingFilterByFlow", "Common",
    new
    {
        flow = ViewBag.Flow
    }).Cache(true))
    .AutoFill(true)
    .HighlightFirstMatch(true)
    .ClientEvents(events => events.OnChange("onSectionComboBoxChange").OnDataBinding("SectionComboBox_DataBinding"))
)
   
}