@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.MRP.HuToMapping.HuToMapping_Edit_Title</legend>
        <div class="editor">
            @Html.HiddenFor(model => model.HuTo)
            @Html.HiddenFor(model => model.CreateUserName)
            @Html.HiddenFor(model => model.CreateDate)
            @Html.HiddenFor(model => model.CreateUserId)
            <div class="editor-label-2">
                @Html.LabelFor(model => model.HuTo)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_HuToComboBox", "Common", new
    {
        controlName = "HuTo",
        enable = false,
        selectedValue = Model != null && Model.HuTo != null ? Model.HuTo : string.Empty
    });
                }
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Party)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_PartyDropDownList", "Common", new
    {
        controlName = "Party",
        selectedValue = Model != null ? Model.Party : string.Empty
    });
                }
                @Html.ValidationMessageFor(model => model.Party)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Flow)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_FlowComboBox", "Common",
        new
        {
            controlName = "Flow",
            //isChange = true,
            selectedValue = Model != null ? Model.Flow : string.Empty
        });
                }
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Item)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_ItemComboBox", "Common",
        new
        {
            controlName = "Item",
            selectedValue = Model != null ? Model.Item : string.Empty
        });
                }
                @*@Html.ValidationMessageFor(model => model.Item)*@
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Fg)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_ItemComboBox", "Common",
        new
        {
            controlName = "Fg",
            selectedValue = Model != null ? Model.Fg : string.Empty
        });
                }
                @*@Html.ValidationMessageFor(model => model.Fg)*@
            </div>
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnSave">
                @Resources.SYS.Global.Button_Save</button>
            @Html.Button(Resources.SYS.Global.Button_Delete, "Url_CUST_HuToMapping", new Dictionary<string, string>()
	        {
	            {"type", "button"},
	            {"id", "btnDelete"},
                {"needconfirm","true"},
                {"onclick","location.href='"+@Url.Content("~/HuTo/HuToMappingDelete/?id="+@Model.Id)+"'"}
            })
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/HuTo/HuToMappingList")'">
                @Resources.SYS.Global.Button_Back</button>
        </div>
