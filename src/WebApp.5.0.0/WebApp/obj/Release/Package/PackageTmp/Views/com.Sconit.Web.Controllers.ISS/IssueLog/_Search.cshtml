@using com.Sconit.Entity.ISS
@using com.Sconit.Entity.SYS
@using com.Sconit.Web.Models.SearchModels.ISS
<fieldset>
    @using (Html.BeginForm("List", "IssueLog"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="IssueCode">
                    @Resources.ISS.IssueLog.IssueCode
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("IssueCode", TempData["IssueLogSearchModel"] != null ? ((IssueLogSearchModel)TempData["IssueLogSearchModel"]).IssueCode : string.Empty)
            </div>
			<div class="search-label">
                <label for="Description">
                    @Resources.ISS.IssueLog.Content
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Content", TempData["IssueLogSearchModel"] != null ? ((IssueLogSearchModel)TempData["IssueLogSearchModel"]).Content : string.Empty)
            </div>
			<div class="search-label">
                <label for="Level">
                     @Resources.ISS.IssueLog.Level
                </label>
            </div>
            <div class="search-field">
                 @{
                    Html.RenderAction("_CodeMasterDropDownList", "Common", new
                    {
                        code = com.Sconit.CodeMaster.CodeMaster.LogLevel,
                        controlName = "Level",
                        includeBlankOption = true,
                        blankOptionDescription = CodeDetail.SpecialValueEnum.BlankValue,
                        blankOptionValue = "",
                         selectedValue = TempData["IssueLogSearchModel"] != null ? ((IssueLogSearchModel)TempData["IssueLogSearchModel"]).Level : null
                    });
                }
            </div>
			<div class="search-label">
                <label for="Description">
                    @Resources.ISS.IssueLog.CreateUser
                </label>
            </div>
			<div class="search-field">
                @Html.TextBox("CreateUser", TempData["IssueLogSearchModel"] != null ? ((IssueLogSearchModel)TempData["IssueLogSearchModel"]).CreateUser : string.Empty)
            </div>
			
			<div class="search-label">
                <label for="DateFrom">
                    @Resources.ISS.IssueLog.DateFrom
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Name("DateFrom").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="DateTo">
                    @Resources.ISS.IssueLog.DateTo
                </label>
            </div>
            <div class="search-field">
               @(Html.Telerik().DatePicker().Name("DateTo").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
			
        </div>    
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
        </div>
    }
</fieldset>
