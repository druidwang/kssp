@using com.Sconit.Entity.SYS
@model com.Sconit.Entity.ACC.PermissionGroup
@Html.Partial("_AjaxMessage") 
<form action="/PermissionGroup/_Edit" method="post">
    <fieldset>
        <legend>@Resources.ACC.PermissionGroup.PermissionGroup_Edit_Title  </legend>
        <div class="editor">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CreateUserId)
                @Html.HiddenFor(model => model.CreateUserName)
                @Html.HiddenFor(model => model.LastModifyDate)
                @Html.HiddenFor(model => model.LastModifyUserId)
                @Html.HiddenFor(model => model.LastModifyUserName)
            <div class="editor-label-2">
			<label>
            @Resources.ACC.PermissionGroup.PermissionGroup_Code </label>
            </div>
            <div class="editor-field-2">
                
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code)
            </div>
            <div class="editor-label-2">
              <label>  @Resources.ACC.PermissionGroup.PermissionGroup_Desc </label>
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-footer">
                <button type="submit" id="btnSave">
                    @Resources.SYS.Global.Button_Save</button>
                <button type="button" id="btnDelete" onclick="location.href='@Url.Content("~/PermissionGroup/Delete/" + @Model.Id)'">
                    @Resources.SYS.Global.Button_Delete</button>
                <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/PermissionGroup/List")'">
                    @Resources.SYS.Global.Button_Back</button>
            </div>
        </div>
    </fieldset>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $("form[action$='_Edit']").submit(function () {
            $.post($(this).attr("action"), $(this).serialize(), function (response) {
                var tabStrip = $("#TabStrip");
                var tabStripContent0 = tabStrip.data("tTabStrip").getContentElement(0);
                $(tabStripContent0).html(response);
            });
            return false;
        });
    });
</script>
