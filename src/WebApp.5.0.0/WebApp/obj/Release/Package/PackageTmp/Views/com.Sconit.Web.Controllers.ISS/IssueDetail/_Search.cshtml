@using com.Sconit.Entity.ISS
@using com.Sconit.Entity.SYS
@using com.Sconit.Web.Models.SearchModels.ISS
<fieldset>
    @using (Html.BeginForm("List", "IssueDetail"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="IssueCode">
                    @Resources.ISS.IssueDetail.IssueCode
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("IssueCode", TempData["IssueDetailSearchModel"] != null ? ((IssueDetailSearchModel)TempData["IssueDetailSearchModel"]).IssueCode : string.Empty)
            </div>
			
			<div class="editor-label-2">
                <label for="IssueLevel">
                    @Resources.ISS.IssueDetail.IssueLevel
                </label>
            </div>
            <div class="editor-field-2">
				@{
                    Html.RenderAction("_IssueLevelDropDownList", "Common",
                        new { controlName = "IssueLevel", includeBlankOption = true,
                              selectedValue = TempData["IssueDetailSearchModel"] != null ? ((IssueDetailSearchModel)TempData["IssueDetailSearchModel"]).IssueLevel:string.Empty
                        });
                }
            </div>
			<div class="search-label">
                <label for="Email">
                    @Resources.ISS.IssueDetail.Email
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Email", TempData["IssueDetailSearchModel"] != null ? ((IssueDetailSearchModel)TempData["IssueDetailSearchModel"]).Email : string.Empty)
            </div>
			<div class="search-label">
                <label for="MobilePhone">
                    @Resources.ISS.IssueDetail.MobilePhone
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("MobilePhone", TempData["IssueDetailSearchModel"] != null ? ((IssueDetailSearchModel)TempData["IssueDetailSearchModel"]).MobilePhone : string.Empty)
            </div>
			<div class="search-label">
                <label for="DateFrom">
                    @Resources.ISS.IssueDetail.DateFrom
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Name("DateFrom").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="DateTo">
                    @Resources.ISS.IssueDetail.DateTo
                </label>
            </div>
            <div class="search-field">
               @(Html.Telerik().DatePicker().Name("DateTo").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
        </div>    
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.SYS.Global.Button_Search</button>
        </div>
    }
</fieldset>
