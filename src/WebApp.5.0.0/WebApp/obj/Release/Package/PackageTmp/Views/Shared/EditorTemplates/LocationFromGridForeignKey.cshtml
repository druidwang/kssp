@(Html.Telerik().ComboBox().HtmlAttributes(new { style = "width: 60px" })
.DropDownHtmlAttributes(new { style = "width: 200px; " })
      .Name(ViewData.TemplateInfo.GetFullHtmlFieldName(""))
          .DataBinding(binding => binding.Ajax().Select("_AjaxLoadingLocation", "Common").Cache(true))
      .AutoFill(true)
      .HighlightFirstMatch(true)
          .ClientEvents(events => events.OnChange("onLocationFromComboBoxChange")
                .OnDataBinding("onLocationFromDataBinding")
      )
)
